<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/failure"
  android:layout_gravity="center"
  android:gravity="center"
  android:orientation="vertical">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="登录失败"
		android:textSize="25dp"
		android:textColor="#151112"
		android:id="@+id/dialog_titile"
		android:gravity="center"
		android:padding="15dp"
	/>
	<TextView
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:text=""
			android:background="#f8f8f8"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
		/>
	<TextView
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:text=""
			android:background="#d5d5d5"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
		/>

	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="22dp"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:orientation="horizontal"
		android:gravity="center_horizontal"
	>
		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:text="用户名/邮箱或者密码输入错误，请重新输入!"
			android:textColor="#3a3a3a"
			android:textSize="18dp"
			android:scrollbars="vertical"
			android:gravity="center_horizontal"
			android:id="@+id/error_message"
		/>
	</LinearLayout>
	<LinearLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="center"
	>
	<Button  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:textSize="15sp"
    android:textColor="#fcd4c3"
    android:gravity="center"
    android:background="@drawable/confirm_bg"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/error_back"/>
	</LinearLayout>
</LinearLayout>
