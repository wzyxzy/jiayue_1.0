<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/activity_my_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/iv_splash"
                    android:layout_width="100dp"
                    android:layout_height="134dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/cover_normal"
                    android:clickable="true"
                    android:scaleType="fitXY" />

              
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_bookname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="电力机车制动机"
                    android:textColor="#000000"
                    android:textSize="21.41dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="作者："
                        android:textColor="@color/text_grey"
                        android:textSize="16.9dp" />

                    <TextView
                        android:id="@+id/tv_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="李智楠"
                        android:textColor="@color/text_grey"
                        android:textSize="16.9dp" />
                </LinearLayout>

                

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="作者简介："
                        android:textColor="@color/text_grey"
                        android:textSize="16.9dp" />

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="简介"
                        android:textColor="@color/text_grey"
                        android:textSize="16.9dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12.33dp"
        android:layout_gravity="center_vertical"
        android:background="@color/login_line" />
 <View
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_gravity="center_vertical"
        android:background="@color/login_hint_color" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.jiayue.view.MyXListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="50.67dp"
            android:divider="@null"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50.67dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:background="#eeeeee"
            android:orientation="horizontal" >

            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_post"
                    android:onClick="btn_send"
                    android:layout_width="123.67dp"
                    android:layout_height="33.67dp"
                    android:background="@color/background"
                    android:text=""
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>