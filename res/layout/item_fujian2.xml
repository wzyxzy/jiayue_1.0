<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
>

    <RelativeLayout
        android:id="@+id/rl_fujian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/attach_selector">
        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
        >


            <ImageView
                android:id="@+id/iv_fujian"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_centerInParent="true"
                android:background="@drawable/dont"
                android:focusable="false"
                android:scaleType="fitXY"
            />

            <TextView
                android:id="@+id/tv_baifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/gropress_green"
                android:textSize="12sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_fujian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/layout1"
            android:maxWidth="230dp"
            android:singleLine="false"
            android:text="name"
            android:textColor="#b5b5b5"
            android:textSize="13.77sp"
        />

        <LinearLayout
            android:id="@+id/layout_download"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/share1"
            />

            <ImageView
                android:id="@+id/iv_point_fujian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/download"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_buy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/btn_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lock"
            />

            <!--<Button
                android:id="@+id/btn_buy"
                android:layout_width="47dp"
                android:layout_height="20dp"
                android:background="@drawable/syn_18"
                android:text="@string/buy"
                android:textColor="@color/green_buy"
                android:textSize="11dp"
            />-->
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
