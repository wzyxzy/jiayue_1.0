<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title"
        layout="@layout/activity_my_title" />

    <ListView
        android:id="@+id/all_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#F1F1F1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/choose_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/choose_all"
            android:drawablePadding="5dp"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="全选"
            android:textColor="#666"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/add_music"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/add_music"
            android:drawablePadding="5dp"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="加入歌单"
            android:textColor="#666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/download_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/dowload_all"
            android:drawablePadding="5dp"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="下载"
            android:textColor="#666"
            android:textSize="14sp" />

    </LinearLayout>


    <!--<ListView-->
    <!--android:id="@+id/all_music"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1" />-->

</RelativeLayout>