<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="@color/login_hint_color"
                android:startColor="@color/login_hint_color" />
        </shape>
    </item>
  
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#1ECBC9"
                    android:startColor="#1ECBC9" />
            </shape>
        </clip>
    </item>
  
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#1ECBC9"
                    android:startColor="#1ECBC9" />
            </shape>
        </clip>
    </item>
</layer-list>