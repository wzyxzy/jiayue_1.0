                android:hint="确认密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:text=""
                android:textColorHint="@color/login_hint_color"
                android:textSize="15.00dp" />
        </LinearLayout>

        <View
            android:layout_width="289.00dp"
            android:layout_height="0.67dp"
            android:background="@color/login_line" />

