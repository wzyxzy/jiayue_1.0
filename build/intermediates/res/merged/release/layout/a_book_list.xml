<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_book1"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/iv_book1"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:scaleType="fitEnd" />

        <ImageView
            android:id="@+id/iv_book_bg1"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_alignBottom="@id/iv_book1"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/book_bg"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_cloud1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_book1"
            android:layout_alignRight="@id/iv_book1"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/point_big" />
        <!--
         <TextView 
	    android:layout_width="108dp"
	    android:layout_height="44dp"
	    android:textColor="#000000" 
	    android:textSize="22px"
	    android:id="@+id/tv_book"
		android:text="步步惊心"
		android:gravity="center"
		android:layout_alignBottom="@id/iv_book"
	    />
        -->

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/iv_book1"
            android:layout_alignTop="@id/iv_book1"
            android:layout_marginTop="10dp"
            android:background="@drawable/live"
            android:paddingBottom="5dp"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_delete1"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignRight="@id/iv_book1"
            android:layout_alignTop="@id/iv_book1"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_delete"
            android:paddingBottom="5dp"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>