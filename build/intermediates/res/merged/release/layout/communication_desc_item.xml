<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="摄氏22读"
            android:textColor="#7d7d7d"
            android:textSize="16.9sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_return_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="　　根据这段时间大家提问，给大家科普一下关于制动阀的相关知识。根据这段时间大家提问"
                android:textColor="#7d7d7d"
                android:textSize="16.9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_add_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-08-03"
                    android:textColor="#959595"
                    android:textSize="15.77dp" />
                
            </LinearLayout>
            
        </LinearLayout>
            <View
                android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_gravity="center_vertical"
        android:background="@color/login_hint_color" />
    </LinearLayout>

    <Button 
        android:id="@+id/btn_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:onClick="btn_join"
        android:visibility="gone"
        android:background="@drawable/btn_blank_shape"
        android:text="参　与"
        android:textSize="20dp"
        android:textColor="@color/background"
        />

</LinearLayout>