<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/failure"
  android:layout_gravity="center"
  android:gravity="center"
  android:orientation="vertical">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="请输入跳转页数:"
		android:textSize="20dp"
		android:textColor="#151112"
		android:gravity="center"
		android:id="@+id/tv_pd_title"
		android:padding="15dp"
	/>
	<TextView
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:text=""
			android:background="#f8f8f8"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
		/>
	<TextView
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:text=""
			android:background="#d5d5d5"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
		/>
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="22dp"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:orientation="horizontal"
		android:gravity="center_horizontal"
	>
		<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="第 "
			android:textColor="#3a3a3a"
			android:textSize="18dp"
		/>
		<EditText 
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:text=""
			android:textColor="#3a3a3a"
			android:textSize="18dp"
			android:gravity="center"
			android:background="@drawable/user_bg"
			android:id="@+id/et_pageNO"
			android:inputType="number"
		/>
		<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" 页"
			android:textColor="#3a3a3a"
			android:textSize="18dp"
		/>
	</LinearLayout>
	<LinearLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="center"
	android:paddingBottom="10dp"
	>
	<Button  
    android:layout_width="117dp" 
    android:layout_height="40dp" 
    android:textSize="15sp"
    android:textColor="#fcd4c3"
    android:gravity="center"
    android:background="@drawable/cancel_bg"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="20dp"
    android:id="@+id/btn_left"/>
	<Button  
    android:layout_width="117dp" 
    android:layout_height="40dp" 
    android:textSize="15sp"
    android:textColor="#fcd4c3"
    android:gravity="center"
    android:background="@drawable/right_bg"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/btn_right"/>
	</LinearLayout>
</LinearLayout>
