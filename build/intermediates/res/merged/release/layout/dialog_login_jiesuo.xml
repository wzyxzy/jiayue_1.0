<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="267dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/jiesuo_kuang"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_titile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="登录失败通知"
        android:textColor="#303030"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp" >

        <TextView
            android:id="@+id/error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您的账号已在另一台设备登录，如非本人操作，可发送信息解锁后登录。"
            android:textColor="#39393b"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="1.25dp"
        android:background="@drawable/line1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_left"
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="取消"
            android:textColor="#b2b2b2"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="43dp"
            android:background="@drawable/line2" 
            android:layout_marginBottom="1.25dp"/>

        <Button
            android:id="@+id/btn_right"
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="解锁账号"
            android:textColor="@color/background"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>