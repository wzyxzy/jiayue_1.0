<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:gravity="left|center_vertical"
            android:onClick="btnBack"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/login_return"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/title"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="left|center_vertical"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/pwd"
        android:textColor="@color/background"
        android:textSize="15.02sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="248.33dp"
            android:layout_height="38.67dp"
            android:background="@drawable/sjikuang"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_phone1"
                android:layout_width="match_parent"
                android:layout_height="38.67dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:background="@null"
                android:hint="   手机号"
                android:textSize="12.03sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="73dp"
            android:layout_height="38.67dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/yzmakuang"
            android:gravity="center"
            android:onClick="btn_send"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/send"
                android:textColor="@color/background"
                android:textSize="12.96sp" />

            <TextView
                android:id="@+id/tv_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="(60秒)"
                android:textColor="@color/background"
                android:textSize="10.14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="323.33dp"
        android:layout_height="38.67dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/yzmkuang"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="38.67dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:hint="   输入验证码"
            android:textSize="12.03sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/reset"
        android:textColor="@color/background"
        android:textSize="15.02sp" />

    <LinearLayout
        android:layout_width="323.33dp"
        android:layout_height="38.67dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/mma"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="38.67dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:hint="   输入新密码"
            android:password="true"
            android:textSize="12.03sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="323.33dp"
        android:layout_height="38.67dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/mma"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_confirm"
            android:layout_width="match_parent"
            android:layout_height="38.67dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:hint="   确认密码"
            android:password="true"
            android:textSize="12.03sp" />
    </LinearLayout>

    <Button
        android:layout_width="320.33dp"
        android:layout_height="44.33dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/tjiao"
        android:onClick="Confirm"
        android:text="提交"
        android:textColor="@color/white" />

</LinearLayout>