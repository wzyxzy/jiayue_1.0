<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41.67dp"
        android:layout_marginRight="41.67dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
         >
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="大学物理123"
            android:textColor="@color/grey01"
            android:textSize="16.17sp" />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
         <CheckBox
             android:layout_weight="1"
            android:id="@+id/checkbox"
            style="@style/CustomCheckboxTheme"
            android:layout_width="18.67dp"
            android:layout_height="18.67dp" />
         </LinearLayout>
    </LinearLayout>

</LinearLayout>